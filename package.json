  "build:css": "postcss theme/assets/css/main.css -o build/assets/css/main.min.css",
  "build:js": "terser theme/assets/js/main.js -o build/assets/js/main.min.js -c -m",
  "minify:html": "html-minifier-terser --input-dir build --output-dir build --collapse-whitespace --remove-comments --minify-css true --minify-js true",
  "validate:html": "html-validate \"build/**/*.html\"",
  "build": "npm run build:css && npm run build:js && npm run minify:html && npm run validate:html"
